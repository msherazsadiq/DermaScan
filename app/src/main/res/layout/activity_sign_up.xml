<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_angular_blue"
    tools:context=".loginsignup.SignUpActivity">

    <TextView
        android:id="@+id/helloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/konkhmer_sleokchher"
        android:padding="10dp"
        android:text="Create your\nAccount"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/helloTextView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_white_upper_round"
        android:layout_marginBottom="0dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Name"
                android:textColor="@color/DarkBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_box"
                android:fontFamily="@font/alike"
                android:hint="Enter name"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="@color/DarkBlue"
                android:textColorHint="@color/DarkBlue"
                android:textCursorDrawable="@drawable/cursor_input"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Email"
                android:textColor="@color/DarkBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_box"
                android:fontFamily="@font/alike"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/DarkBlue"
                android:textColorHint="@color/DarkBlue"
                android:textCursorDrawable="@drawable/cursor_input"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Password"
                android:textColor="@color/DarkBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_box"
                android:fontFamily="@font/alike"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/DarkBlue"
                android:textColorHint="@color/DarkBlue"
                android:textCursorDrawable="@drawable/cursor_input"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/signUpButton"
                android:layout_width="200dp"
                android:layout_height="47dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="100dp"
                android:background="@drawable/background_button_dark_blue"
                android:fontFamily="@font/alike"
                android:gravity="center"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/alike"
                android:text="Already have an account?"
                android:textColor="@color/DarkBlue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/registerOptionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/alike"
                android:text="Sign in"
                android:paddingStart="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/DarkBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>