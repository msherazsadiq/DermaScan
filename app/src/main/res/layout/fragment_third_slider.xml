<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introslider.ThirdSliderFragment">


    <RelativeLayout
        android:id="@+id/slider_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_angular_blue"
        android:clipToOutline="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/alike"
            android:padding="10dp"
            android:text="Terms &amp;\n Data Protection"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/secondSliderWhiteBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/background_white_upper_round"
            android:gravity="center|top"
            android:padding="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms of use:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"
                android:fontFamily="@font/alike"
                android:gravity="top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_of_use"
                android:textSize="17sp"
                android:textColor="@color/DarkBlue"
                android:fontFamily="@font/alike"
                android:gravity="top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Protection:"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"
                android:fontFamily="@font/alike"
                android:layout_marginTop="20dp"
                android:gravity="top"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_protection"
                android:textSize="17sp"
                android:textColor="@color/DarkBlue"
                android:fontFamily="@font/alike"
                android:gravity="top"/>



        </LinearLayout>

    </RelativeLayout>





</FrameLayout>